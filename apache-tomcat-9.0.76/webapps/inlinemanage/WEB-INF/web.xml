<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
      <welcome-file>index.jsp</welcome-file> 
  </welcome-file-list>

<!--Aqui reconocemos el servlet que seria el controlador principal-->
  <!--CLASE EN JAVA-->
  <servlet>
    <servlet-name>ControllerInline</servlet-name>
    <servlet-class>ControllerInline</servlet-class>
  </servlet>

  <!--HEAD DE LA PAGINA WEB-->  
  <servlet-mapping>
    <servlet-name>ControllerInline</servlet-name>
    <url-pattern>/ControllerInline</url-pattern>
  </servlet-mapping>

  <!--CONTROLADOR-->
  <!--CLASE EN JAVA-->
  <servlet>
  <servlet-name>controller.Usuario</servlet-name>
  <servlet-class>controller.Usuario</servlet-class>
</servlet>

<!--HEAD DE LA PAGINA WEB-->
<servlet-mapping> 
  <servlet-name>controller.Usuario</servlet-name>
  <url-pattern>/usuario</url-pattern>
</servlet-mapping>
</web-app>
